-fields = (Car.fields.keys - ["_type", "_id", "user_id", "slug"])

.page-header
  %h1
    = "My Cars"
.row
  .span7
    %table.table.table-hover.table-bordered.table-condensed.cars
      %thead
        %tr
          -fields.each do |field|
            %th
              = "#{field.titleize}"
      %tbody
        -current_user.cars.each do |c|
          %tr{"data-car-slug" => c.slug, "data-preview-url" => preview_car_url(c.slug)}
            -fields.each do |f|
              %td
                = c.send(f.to_sym)
  .span5
    #display_car
